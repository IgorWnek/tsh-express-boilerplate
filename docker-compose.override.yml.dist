version: '3.4'

x-common:
  volumes: &volumes
    - build:/app/build/
    - .:/app:delegated
    - ./.env.dist:/app/build/.env.dist
    - ./.env:/app/build/.env

services:
  builder:
    volumes: *volumes

  js:
    volumes: *volumes

  js_test:
    volumes: *volumes

  boilerplate_api:
    volumes: *volumes
    env_file:
      - .env
    depends_on:
      - adminer
      - postgres

  redis:
    ports:
      - "${REDIS_PORT:-6379}:6379"

  adminer:
    image: adminer
    restart: always
    depends_on:
      - postgres
    ports:
      - 8080:8080
    networks:
      - app
