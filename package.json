{
  "name": "percent_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "watch": "docker-compose up builder",
    "docker-build": "./docker/build.sh",
    "docker-build-base": "docker build -t brickvest-next:latest --target builder -f ./docker/dev/Dockerfile .",
    "docker-build-prod": "docker build -t=percent-api:latest -f ./docker/prod/Dockerfile .",
    "api": "docker-compose up percent_api",
    "down": "docker-compose down -v",
    "format": "docker-compose run --rm js ./node_modules/.bin/prettier --write \"**/**/*.ts\" \"!**/**/*.d.ts\"",
    "eslint": "docker-compose run --rm js ./node_modules/.bin/eslint -c ./eslint.json --ext .ts ./",
    "eslint-fix": "docker-compose run --rm js ./node_modules/.bin/eslint -c ./eslint.json --ext .ts --fix ./",
    "integration-tests": "cd build && node ../node_modules/.bin/mocha \"tests/**/*.spec.js\"",
    "services-units": "cd build && node ../node_modules/.bin/mocha \"src/**/*.spec.js\"",
    "integration": "docker-compose run --rm js npm run integration-tests",
    "units": "docker-compose run --rm js npm run services-units",
    "shell": "docker-compose run --rm js sh"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "awilix": "^4.2.2",
    "celebrate": "^10.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "http-status-codes": "^1.3.2",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.6",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.43",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "@types/supertest": "^2.0.7",
    "@types/swagger-jsdoc": "0.0.2",
    "@types/swagger-ui-express": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-typescript": "^4.0.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.1.4",
    "plop": "^2.3.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  }
}
